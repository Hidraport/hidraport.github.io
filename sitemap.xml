<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  {% for p in site.pages %}{% if p.menu-title %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ p.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endif %}{% endfor %}

  {% for p in site.aplicacoes %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ p.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  {% for p in site.categorias %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ p.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  {% for p in site.produtos %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ p.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

</urlset> 